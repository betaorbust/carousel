{
	"include": ["./src/**/*"],
	"exclude": [
		"node_modules",
		"**/*.test.tsx",
		"**/*.test.ts",
		"**/*.story.*",
		"**/*.stories.*",
		"**/.storybook"
	],
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"lib": ["dom", "es2015"],
		"jsx": "react-jsx",
		"jsxImportSource": "@emotion/react",
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true
	}
}
